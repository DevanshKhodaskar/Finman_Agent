{
  "version": 2,
  "env": {
    "TELEGRAM_BOT_TOKEN": "@TELEGRAM_BOT_TOKEN",
    "GROQ_API_KEY": "@GROQ_API_KEY",
    "MONGO_URI": "@MONGO_URI",
    "MONGO_DB_NAME": "Finman"
  },
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@4",
      "config": {
        "maxLambdaSize": "3000mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}